{
  "name": "gertvdb/limit_tex_format",
  "description": "widget to limit the text formats on a textarea",
  "type": "drupal-module",
  "license": "GPL-2.0+",
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "minimum-stability": "alpha",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "drupal/coder": "^8.3",
    "drupal/core-recommended": "^9.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\limit_tex_format\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
